{
    "editor.renderWhitespace": "none",
    "editor.minimap.enabled": false,
    "editor.lineNumbers": "relative",
    "editor.wordWrap": "on",
    "editor.fontFamily": "FiraCode Nerd Font Mono",
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "solid",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "editor.lineHeight": 1.3,
    "editor.tabSize": 2,
    "editor.cursorSurroundingLines": 8,

    "workbench.startupEditor": "none",
    "workbench.tips.enabled": false,
    "workbench.colorTheme": "Tokyo Night",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.activityBar.location": "hidden",
    "workbench.tree.indent": 16,
    "workbench.navigationControl.enabled": false,
    "workbench.layoutControl.enabled": false,

    "window.commandCenter": false,
    "window.titleBarStyle": "custom",
    "window.customTitleBarVisibility": "never",


    "telemetry.feedback.enabled": false,
    "chat.commandCenter.enabled": false,
    "files.trimTrailingWhitespace": true,
    "breadcrumbs.enabled": false,
    "explorer.compactFolders": false,

    "vim.leader": "<space>",
    "vim.smartRelativeLine": false,
    "vim.useSystemClipboard": true,
    "vim.cursorStylePerMode.insert": "line",
    "vim.argumentObjectClosingDelimiters": [
        ")",
        "]",
        "}"
    ],
    "vim.argumentObjectOpeningDelimiters": [
        "(",
        "[",
        "{"
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        // leader x closes the current editor
        {
            "before": ["<leader>", "x"],
            "after": [":", "q", "<CR>"]
        },
        // Open file picker (Space + f f)
        {
            "before": ["leader", "f", "f"],
            "commands": ["workbench.action.quickOpen"]
        },
        // Toggle File Explorer (Space + p v)
        {
            "before": ["leader", "p", "v"],
            "commands": ["workbench.explorer.fileView.focus"]
        },
        // Toggle Git tab (Source Control) (Space + g f)
        {
            "before": ["leader", "g", "f"],
            "commands": ["workbench.view.scm"]
        },
        // Toggle Side Bar visibility (Space + t t)
        {
            "before": ["leader", "t", "t"],
            "commands": ["workbench.action.toggleSidebarVisibility"]
        },
        // Open Extensions tab (Space + e x)
        {
            "before": ["leader", "e", "x"],
            "commands": ["workbench.view.extensions"]
        },
        // Move focus to the left (Ctrl + h)
        {
            "before": ["<C-h>"],
            "commands": ["workbench.action.focusSideBar"]
        },
        // Move focus to the right (Ctrl + l)
        {
            "before": ["<C-l>"],
            "commands": ["workbench.action.focusActiveEditorGroup"]
        },
        // Show hover documentation (K)
        {
            "before": ["K"],
            "commands": ["editor.action.showHover"]
        },
        // ctrl + h/j/k/l to navigate between splits
        // {
        //     "before": ["<C-h>"],
        //     "after": ["<C-w>", "h"]
        // },
        // {
        //     "before": ["<C-j>"],
        //     "after": ["<C-w>", "j"]
        // },
        // {
        //     "before": ["<C-k>"],
        //     "after": ["<C-w>", "k" ]
        // },
        // {
        //     "before": ["<C-l>"],
        //     "after": ["<C-w>", "l"]
        // }
    ],
    "window.newWindowProfile": "Default"
}
