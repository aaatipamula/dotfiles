[
  {
    "key": "ctrl+shift+/",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },
  {
    "key": "ctrl+alt+/",
    "command": "workbench.action.terminal.new",
    "when": "terminalProcessSupported || terminalWebExtensionContributedProfile"
  },
  // tab and shift+tab to switch between editors
  {
    "key": "tab",
    "command": "workbench.action.nextEditor",
    "when": "editorTextFocus && vim.mode == 'Normal'"
  },
  {
    "key": "shift+tab",
    "command": "workbench.action.previousEditor",
    "when": "editorTextFocus && vim.mode == 'Normal'"
  },
    // Ctrl+h: focus sidebar if visible, otherwise move to left editor
  {
    "key": "ctrl+h",
    "command": "workbench.action.focusSideBar",
    "when": "vim.mode == 'Normal' && sideBarVisible == true"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.focusLeftGroup",
    "when": "vim.mode == 'Normal' && sideBarVisible == false"
  },
  // Ctrl+l: focus editor if sidebar visible, otherwise move to right editor
  {
    "key": "ctrl+l",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "vim.mode == 'Normal' && sideBarVisible == true"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.focusRightGroup",
    "when": "vim.mode == 'Normal' && sideBarVisible == false"
  }

]